<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.demo.springboot.mapper.StudentMapper">
    <!--获取学生-->
    <select id="getStudents" parameterType="student" resultMap="studentMap">
        select * from t_student a
        left join t_clazz b on a.clazzId = b.clazzId
    </select>

    <!--添加学生-->
    <insert id="addStudent" parameterType="student">
        insert into t_student(studentName,clazzId)
        values (#{studentName},#{clazz.clazzId})
    </insert>

    <resultMap id="studentMap" type="student">
        <result column="studentId" property="studentId"/>
        <result column="studentName" property="studentName"/>
        <association property="clazz" javaType="clazz">
            <result column="clazzId" property="clazzId"/>
            <result column="clazzName" property="clazzName"/>
        </association>
    </resultMap>
</mapper>